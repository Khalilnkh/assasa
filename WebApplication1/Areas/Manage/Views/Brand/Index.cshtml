@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}
<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Category</h1>
    </div>
    <div class="col-lg-1">
       <a asp-area="manage" asp-controller="category" asp-action="indexcreate" class="btn btn-primary">Create Category</a>
    </div>

</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped ">
            <thead>
                <tr>
                    <th>Number</th>
                    <th>Name</th>
                      <th>Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Brand brand in Model)
               {
                   <tr>
                    <td>@counter</td>
                    <td>@brand.Name</td>
                    <td>
                        <a class="btn-primary" >Update</a>
                        <a class="btn-primary" >Delete</a>
                        <a class="btn-primary" >Detail</a>
                    </td>

                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>