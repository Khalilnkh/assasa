@model Category
@{
    IEnumerable<Category> categories = ViewBag.Categories;
    SelectList selectListItems = new SelectList(categories, nameof(Category.Id), nameof(Category.Name));
}

<h1>Create Brand</h1>
<div class="row">
    <div class="col-lg-8">
        <form enctype="multipart/form-data" method="post">

            <div class="form-check">
                <input asp-for="IsMain" class="form-check-input">
                <label asp-for="IsMain" class="form-check-label">Check me out</label>
            </div>
            
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Name"></span>
            </div>
            <div id="imageList" class="form-group">
                <label asp-for="File" >Image</label>
                <input asp-for="File" multiple   accept="image/jpg"  class="form-control" >
                <span asp-validation-for="File"></span>

            </div>
            
            <div id="parentLsit" class="form-group">
                <label >Parent Category</label>
                <select asp-for="ParentId" class="form-control" asp-items="selectListItems" >
                  @*  @foreach (Category category in categories)
                   {
                    <option value="@category.Id">@category.Name</option>
                       
                   }*@
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>

    </div>
</div>

@section script{
    @await Html.PartialAsync("ValidationPartial")
}