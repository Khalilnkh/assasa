@model Category

<h1>Create Brand</h1>
<div class="row">
    <div class="col-lg-8">
        <form method="post">

            <div class="form-check">
                <input asp-for="IsMain" class="form-check-input">
                <label asp-for="IsMain" class="form-check-label">Check me out</label>
            </div>
            
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image">Image</label>
                <input asp-for="Image" class="form-control" id="exampleInputEmail1">
            </div>
            
            <div class="form-group">
                <label >Parent Category</label>
                <select class="form-control" >
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>

    </div>
</div>