@model IEnumerable<Category>
@{
    int counter=1;
}


<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped ">
            <thead>
                <tr>
                    <th>Number</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Product Count</th>
                    <th>Created at</th>
                      <th>Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
               {
                   <tr>
                    <td>@counter</td>
                    <td><img src="~/assets/images/@category.Image"> </td>td>
                    <td>@category.Name</td>
                    <td>@category.products.Count()</td>
                    <td>@category.CreatedAt?.ToString("dd/mm/yyyy")</td>
                   




                    <td>
                        <a class="btn-primary" >Update</a>
                        <a class="btn-primary" >Delete</a>
                        <a class="btn-primary" >Detail</a>
                    </td>

                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>