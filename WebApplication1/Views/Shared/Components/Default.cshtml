@model IndexVm
<section class="slider-area slider-active">
    @foreach (Slider slider in Model.Sliders)
    {
        <div class="single-slider">
            <div class="slider-image">
                <img src="assets/images/@Model.Sliders.Image" alt="slider">
            </div>
            <div class="slider-content-wrapper">
                <div class="container-fluid custom-container">
                    <div class="slider-content">
                        <h4 data-animation="fadeInDown" data-delay="0.5s" class="sub-title">@Model.Sliders.SubTitle</h4>
                        <h1 data-animation="fadeInLeft" data-delay="0.5s" class="main-title ">@Html.Raw(Model.Sliders.MainTitle)</h1>
                        <p data-animation="fadeInRightBig" data-delay="0.5s">@Model.Sliders.Description</p>
                        <a data-animation="zoomIn" data-delay="0.5s" class="main-btn " href="@Model.Sliders.PageLink">Shop Now</a>
                    </div>
                </div> <!-- container -->
            </div>
        </div> <!-- single slider -->
    }

</section>


                        <section class="category-area category-bg pt-100 pb-100">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section-title text-center pb-30">
                    <h2 class="title">Featured Categories</h2>
                </div>
            </div>
        </div> <!-- row -->
        <div class="row category-active">
            @for (int i = 0; i < (int)Math.Ceiling((decimal)Model.Categories.Count() / 2); i++)
            {
                <div class="col-lg-2">
                    @foreach (Category category in Model.Categories.Skip(i * 2).Take(2))
                    {
                        <div class="single-category text-center">
                            <a target="_blank" href="shop-left-sidebar.html">
                                <img src="assets/images/@category.Image" alt="category">
                                <p>@category.Name</p>
                            </a>
                        </div>
                    }
                </div>
            }



        </div> <!-- row -->
    </div> <!-- container -->
</section>